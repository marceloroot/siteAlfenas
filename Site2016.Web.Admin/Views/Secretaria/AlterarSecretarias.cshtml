@{
    ViewBag.Title = "AlterarSecretarias";
    Layout = "~/Views/_MasterPageAdmin.cshtml";
}




<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
            <li class="active">Buscar Secretarias</li>
        </ol>
    </div><!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Alterar Secretarias</h1>
        </div>
    </div><!--/.row-->


    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Lista de Secretarias</div>
                <div class="panel-body">
                    <table data-toggle="table" data-url="tables/data1.json" data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-pagination="true" data-sort-name="id">
                        <thead>
                            <tr>
                                <th data-field="state">Editar </th>
                                <th data-field="excluir">Excluir </th>
                                <th data-field="vinculo">Vincular </th>
                                <th data-field="tel" data-sortable="true">Telefones</th>
                                <th data-field="id" data-sortable="true">ID</th>
                                <th data-field="titulo" data-sortable="true">Nome</th>

                                <th data-field="vinculado" data-sortable="true">Vinculado</th>
                     
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var variavel in ViewBag.Secretaria)
                            {
                                <tr>
                                    <td data-field="state"><a href="@Url.Action("PaginaAlterarSecretaria", "Secretaria", new { IdSecretaria = variavel.Id })">Editar</a></td>
                                    <td data-field="excluir"><a data-toggle="modal" data-target="#@variavel.Id">Excluir</a>
                                    <td data-field="vinculo"><a href="@Url.Action("VincularSecretaria", "Secretaria", new { idSecretaria = variavel.Id })">Vincular</a></td>
                                    <td data-field="tel"><a href="@Url.Action("EditarTelefone", "Secretaria", new { idSecretaria = variavel.Id })">Telefones</a></td>

                                    <td data-field="id" data-sortable="true">@variavel.Id</td>
                                    <td data-field="titulo" data-sortable="true">@variavel.Nome</td>

                                    @{
                                if (variavel.SecretariaUnica != null)
                                {
                                    <td data-field="vinculado" data-sortable="true">@variavel.SecretariaUnica.Nome</td>
                                }
                                else
                                {
                                    <td data-field="vinculado" data-sortable="true">Sem Vinculo</td>
                                }

                                    }

                                </tr>

                                <div id="@variavel.Id" class="modal fade" role="dialog">
                                    <div class="modal-dialog">

                                        <!-- Modal content-->
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                <h4 class="modal-title">Excluir Secretaria</h4>
                                            </div>
                                            <div class="modal-body">
                                                <p>Você deseja realmente Excluir essa secretaria.</p>
                                            </div>
                                            <div class="modal-footer">
                                                <a href="@Url.Action("Excluir", "Secretaria", new { idSecretaria = variavel.Id })" class="btn btn-default">Excluir</a>
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                            </div>

                                        </div>

                                    </div>
                                </div>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div><!--/.row-->



</div><!--/.main-->
<script src="~/js/jquery-1.11.1.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/chart.min.js"></script>
<script src="~/js/chart-data.js"></script>
<script src="~/js/easypiechart.js"></script>
<script src="~/js/easypiechart-data.js"></script>
<script src="~/js/bootstrap-datepicker.js"></script>
<script src="~/js/bootstrap-table.js"></script>
<script>
    !function ($) {
        $(document).on("click", "ul.nav li.parent > a > span.icon", function () {
            $(this).find('em:first').toggleClass("glyphicon-minus");
        });
        $(".sidebar span.icon").find('em:first').addClass("glyphicon-plus");
    }(window.jQuery);

    $(window).on('resize', function () {
        if ($(window).width() > 768) $('#sidebar-collapse').collapse('show')
    })
    $(window).on('resize', function () {
        if ($(window).width() <= 767) $('#sidebar-collapse').collapse('hide')
    })
</script>


