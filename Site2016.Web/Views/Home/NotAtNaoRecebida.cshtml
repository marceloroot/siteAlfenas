
@using PagedList.Mvc
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    Layout = null;
}




                <!-- tabela 1-->
                <div class="col-md-11 col-lg-11 col-sm-11   font_telefones alinhar_esquerda_telefone" style="margin-top:10px;">
                    <h5>Notificação de autuação não recebida</h5>
                </div>


                <!-- Noticação de atuação nao recebida-->
                <div class="col-md-11 col-lg-11 col-sm-11   font_telefones alinhar_esquerda_telefone" style="margin-top:10px;">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="col-lg-2">DATA</th>
                                <th class="col-lg-8">DESCRIÇÃO DO DOCUMENTO</th>
                                <th class="col-lg-1">DOWNLOAD</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var variavel in ViewBag.NotAtNaoRecebida)
                            {
                                <tr>
                                    <td class="col-lg-2">@variavel.DataPublicacao.ToShortDateString()</td>
                                    <td class="col-lg-8">@variavel.Descricao</td>
                                    <td class="col-lg-1"><a href="~/Arquivos/Jari/@variavel.ArquivoUnico.Caminho"><span class="glyphicon glyphicon-search col-lg-12" aria-hidden="true"></span></a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>



              
    Pagina @ViewBag.NotAtNaoRecebida.PageNumber de @ViewBag.NotAtNaoRecebida.PageCount

        @Html.PagedListPager((PagedList.PagedList<Site2016.Dominio.Jari>)ViewBag.NotAtNaoRecebida, page => Url.Action("NotAtNaoRecebida", new { pagina = page }))


