@using PagedList.Mvc
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Telefones";
    Layout = "~/Views/_MasterPrincipal.cshtml";
    var telefone = ViewBag.telefones;
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/jquery-1.9.1.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
}






<!--TELEFONES-->
@using (Html.BeginForm("Telefones", "Home", FormMethod.Post))
{
    <center>
        <div class="row" style="margin-left:6%;">
            <div class="col-md-10 col-lg-10 col-sm-11 col-lg-offset-1">

                <div class="col-lg-11 col-md-11 col-sm-11" style="background-color:#012B43; margin-bottom:20px; margin-top:20px; height:60px;">
                    <span class="h3" style=" float:left; margin-top:14px; margin-bottom:10px; color:white;    font-family: Verdana, Arial, Helvetica, sans-serif; font-weight:bold; font-size:30px;">Telefones</span>
                </div>
                <br />

                <div class="col-lg-11 col-md-11 col-sm-11" style="margin-top:30px;">


                    <div class="input-group">
                        <input type="text" class="form-control" id="search" name="search" placeholder="Digite o titulo da publicação">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit">Buscar</button>
                        </span>
                    </div><!-- /input-group -->

                </div>

                <div class="col-md-11 col-lg-11 col-sm-11   font_telefones alinhar_esquerda_telefone" style="margin-top:10px;">

                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="col-lg-4">Setor</th>
                                <th class="col-lg-5">Endereço</th>
                                <th class="col-lg-2">Telefone</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var variavel in telefone)
                            {
                                <tr>
                                    <td class="col-lg-4">@variavel.SecretariaUnica.Nome</td>
                                    <td class="col-lg-5">@variavel.SecretariaUnica.Endereco</td>
                                    <td class="col-lg-2">@variavel.Numero</td>
                                </tr>
                            }

                        </tbody>
                    </table>




                </div>

            </div>

        </div>
    </center>
}
<center>
    <div class="col-md-11 col-lg-11 col-sm-11  col-lg-offset-1  font_telefones alinhar_esquerda_telefone" style="margin-left:6%">
        Pagina @ViewBag.telefones.PageNumber de @ViewBag.telefones.PageCount

        @Html.PagedListPager((PagedList.PagedList<Site2016.Dominio.Telefone>)ViewBag.telefones, page => Url.Action("Telefones", new { pagina = page }))
    </div>
</center>